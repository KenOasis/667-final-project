extends layout/main-layout.pug

block title
  title Login

block navbar
  case (isLoggedIn)
    when true
      include navbar/nav-logged-in
    default
      include navbar/nav-logged-out

block content
  script(type="text/javascript" src="/script/signup-validation.js" defer)
  div(class="container fluid")
    div(class="row d-flex justify-content-center align-items-center h-100")
      div(class="col-md-9 col-lg-6 col-xl-5")
        img(src="/images/logo.png" class="img-fluid" alt="Sample image")
      div(class="col-md-8 col-lg-6 col-xl-4 offset-xl-1")
        form(action="/user/signup" method="POST")
          h1 Register
          div(class="form-outline mb-2") 
            input(
              type="text" 
              id="username"
              name="username"
              class="form-control form-control-lg"
              placeholder="Enter a valid username" 
              required
              )
            div(class="invalid-feedback" id="feedback_username")
            label(class="form-label" for="username") Username
          div(class="form-outline mb-2") 
            input(
              type="email" 
              id="email"
              name="email" 
              class="form-control form-control-lg"
              placeholder="Enter a valid email address" 
              required
              )
            div(class="invalid-feedback" id="feedback_email")
            label(class="form-label" for="email") Email address
          div(class="form-outline mb-2")
            input(
              type="password" 
              id="password"
              name="password"
              class="form-control form-control-lg"
              placeholder="Enter password"
              required
              )
            div(class="invalid-feedback" id="feedback_pw")
            label(class="form-label" for="password") Password 
            input(
              type="password"
              id="confirmPassword"
              name="confirm_password" 
              class="form-control form-control-lg"
              placeholder="Confirm password"
              )
            div(class="invalid-feedback" id="feedback_confirmPW")
            label(class="form-label" for="confirmPassword") Confirm Password 
          div(class="d-flex justify-content-between align-items-center")
            div(class="form-check mb-0")
              input(
                class="form-check-input me-2"
                type="checkbox" 
                id="checkbox"
                name="accpetRules"
                required
                )
              label(class="form-check-label" for="checkbox") Accept 
                a(href="") Privacy Rules 
          div(class="text-left text-lg-start mt-4 pt-2")
            input(
              type="submit"
              class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;"
              ) 