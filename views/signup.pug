extends layout/main-layout.pug

block title
  title Login

block styles
  link(rel="stylesheet", href="/css/icon.css")

block navbar
  case (isLoggedIn)
    when true
      include navbar/nav-logged-in
    default
      include navbar/nav-logged-out

block content
  script(type="text/javascript" src="/js/validation/signup-validation.js" defer)
  // Toasts 
  div(class="position-fixed top-0 end-0 p-3" style="z-index: 2000")
    #signupToast(class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="2000")
      div(class="toast-header")
        strong(class="me-auto") Message 
        small(class="text-muted") Sign up
        button(type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close")
        #errors_message(class="toast-body")
  // Card for profile
  div(class="container fluid")
    div(class="row d-flex justify-content-center align-items-center h-100")
      div(class="col-md-5")
        img(src="/images/logo.png" class="img-fluid" alt="Sample image")
      div(class="col-md-8 col-lg-6 col-xl-4 offset-xl-1")
        form
          h1 Register
          div(class="form-outline mb-2") 
            input#username(
              type="text" 
              name="username"
              class="form-control form-control-lg"
              placeholder="Enter a valid username" 
              required
              )
            #feedback_username(class="invalid-feedback")
            label(class="form-label" for="username") Username
          div(class="form-outline mb-2") 
            input#email(
              type="email" 
              name="email" 
              class="form-control form-control-lg"
              placeholder="Enter a valid email address" 
              required
              )
            #feedback_email(class="invalid-feedback")
            label(class="form-label" for="email") Email address
          div(class="form-outline mb-2")
            input#password(
              type="password" 
              name="password"
              class="form-control form-control-lg"
              placeholder="Enter password"
              required
              )
            #feedback_pw(class="invalid-feedback")
            label(class="form-label" for="password") Password 
            input#confirmPassword(
              type="password"
              name="confirm_password" 
              class="form-control form-control-lg"
              placeholder="Confirm password"
              )
            #feedback_confirmPW(class="invalid-feedback")
            label(class="form-label" for="confirmPassword") Confirm Password 
          div(class="d-flex justify-content-between align-items-center")
            div(class="form-check mb-0")
              input#checkbox(
                class="form-check-input me-2"
                type="checkbox" 
                name="accpetRules"
                required
                )
              label(class="form-check-label" for="checkbox") Accept 
                a(href="") Privacy Rules 
          div(class="text-left text-lg-start mt-4 pt-2")
            input(
              type="button"
              class="btn btn-danger btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;"
              onclick="onSubmitSignup()"
              value="Submit"
              ) 
          br