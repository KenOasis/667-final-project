extends layout/main-layout.pug

block title
  title Login

block styles
  link(rel="stylesheet", href="/css/icon.css")

block navbar
  li(class="nav-item")
    a(class="nav-link" href="/login") Login
  li(class="nav-item")
    a(class="nav-link" href="/signup") Register 

block content
  div(class="container fluid ")
    div(class="row d-flex justify-content-center align-items-center h-100")
      div(class="col-md-5")
        img(src="/images/logo.png" class="img-fluid" alt="Sample image")
      div(class="col-md-7")
        form(action="/users/signup", method="POST")
          h1 Register
          div(class="form-outline mb-2") 
            input(
              type="text" 
              id="username"
              name="username"
              class="form-control form-control-lg"
              placeholder="Enter a valid username" 
              required
              )
            label(class="form-label" for="username") Username
          div(class="form-outline mb-2") 
            input(
              type="email" 
              id="email"
              name="email" 
              class="form-control form-control-lg"
              placeholder="Enter a valid email address" 
              required
              )
            label(class="form-label" for="email") Email address
          div(class="form-outline mb-2")
            input(
              type="password" 
              id="password"
              name="password"
              class="form-control form-control-lg"
              placeholder="Enter password"
              required
              )
            label(class="form-label" for="password") Password 
            input(
              type="password"
              id="confirmPassword"
              name="confirm_password" 
              class="form-control form-control-lg"
              placeholder="Confirm password"
              )
            label(class="form-label" for="confirmPassword") Confirm Password
          label(for="") Select your icon 
          div(class="d-flex flex-nowrap row-h1") 
            div(class="form-check p-0 item-h1 ")
                label(for="aplaca", class="form-check-label")
                input(type="radio" id="aplaca" name="icon" value="alpaca")
                span
                  img(src="/images/icon/alpaca.jpg", alt="",class="iconsize")
            div(class="form-check p-0 item-h1 ")
                label(for="chick", class="form-check-label")
                input(type="radio" id="chick"  name="icon" value="chick")
                span
                  img(src="/images/icon/chick.jpg", alt="",class="iconsize")
            div(class="form-check p-0 item-h1 ")
                label(for="lion", class="form-check-label")
                input(type="radio" id="lion" name="icon" value="lion")
                span
                  img(src="/images/icon/lion.jpg", alt="",class="iconsize")
            div(class="form-check p-0 item-h1 ")
                label(for="sheep", class="form-check-label")
                input(type="radio" id="sheep" name="icon" value="sheep")
                span
                  img(src="/images/icon/sheep.jpg", alt="",class="iconsize")
            div(class="form-check p-0 item-h1 ")
              label(for="horse", class="form-check-label")
              input(type="radio" id="horse" name="icon" value="horse")
              span
                img(src="/images/icon/horse.jpg", alt="",class="iconsize")
            div(class="form-check p-0 item-h1 ")
                label(for="tiger", class="form-check-label")
                input(type="radio" id="tiger" name="icon" value="tiger")
                span
                  img(src="/images/icon/tiger.jpg", alt="",class="iconsize")           
          br

          div(class="d-flex justify-content-between align-items-center")
            div(class="form-check mb-0")
              input(
                class="form-check-input me-2"
                type="checkbox" 
                id="checkbox"
                name="accpetRules"
                required
                )
              label(class="form-check-label" for="checkbox") Accept 
                a(href="") Privacy Rules 
          div(class="text-left text-lg-start mt-4 pt-2")
            input(
              type="submit"
              class="btn btn-danger btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;"
              )
          br