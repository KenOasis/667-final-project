extends layout/main-layout.pug

block title
  title four random cards

block styles
  link(rel="stylesheet", href="/css/card.css")

block scripts
  script(type="text/javascript").
    var cards = !{JSON.stringify(cards)}
  

block navbar
  case (isLoggedIn)
    when true
      include navbar/nav-logged-in
    default
      include navbar/nav-logged-out

block content
  div(class="container fluid")
    div(class="row")
      div(class="col-md-3") Space
      div(class="col-md-6" id="container_top")

      div(class="col-md-3") space
    div(class ="row")
      div(class="col-md-3" id="container_left" style="height: auto")
       
      div(class="col-md-6" )
        div(class="row")
          div(class="col-md-3")
          div(class="col-md-6" id="discard_pile")
            
          div(class="col-md-3")

      div(class="col-md-3" id="container_right" style="height: auto")
        
    br
    div(class = "row p-0")
      div(class="col-md-3")
        div(
          class="col"
      )

      div(class="col-md-6 p-0")
        div(class="row")
          div(class="col")
            div(class="d-flex justify-content-center row-hl" id="game_control")
              botton(class="btn btn-outline-danger item-hl p-4" type="botton" id="draw_card") DRAW
              botton(class="btn btn-outline-danger item-hl p-4" type="botton" id="uno") UNO
              botton(class="btn btn-outline-danger item-hl p-4" type="botton" id="play" onclick="playCard(event)") PLAY
          div(class="col" id ="container_bottom")


  script 
    include ../public/js/card.js
  script
    include ../public/js/frontend.js










 

