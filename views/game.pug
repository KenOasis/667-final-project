<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title Uno!
    link(
     href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
     rel="stylesheet" 
     integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
     crossorigin="anonymous"
    )
    link(rel="stylesheet", href="/css/card.css")

  body
    header(class = "header") 
      img(
        src="/images/logo.png"
        class="rounded mx-auto img-fluid d-block"
        alt="Responsive image"
        width="70"
        height="100"
        )
    input#user_list(type="hidden" value=(user_list))
    div(class="container fluid")
      div(class="row")
        div(class="col-md-2")
        div(class="col-md-2" style="text-align: right;")
          button(type = "button" id="draw" class = "btn draw_button") Deck
          h6(id="card_deck" style="left: -30px;position: relative;") 45
        #container_top(class="col-md-4 top_bottom ")
          
        div(class="col-md-2")
          div(class="d-flex flex-column row-h1" id="top_user")
            div(class="p-2 item-h1")
              img(class="card-img-top" style="width: 5rem;" src="/images/profile/profile2.gif" alt="Card img top")
            div(class="p-0 item-h1 name" ) 
            div(class="p-0 item-h1 point") point:
        div(class="col-md-2") 
          botton#leave(class="btn btn-outline-danger") Leave
      div(class ="row")
        div(class="col-md-2")
          div(class="d-flex flex-column row-h1" id="left_user")
            div(class="p-2 item-h1")
              img(class="card-img-top" style="width: 10rem;" src="/images/profile/profile1.gif" alt="Card img top")
            div(class="p-2 item-h1 name" ) 
            div(class="p-2 item-h1 point") point:
        div(class="col-md-2 left_right")
          #container_left(class = "row")    
        div(class="col-md-4" )
          div(class = "row")
            div(class = "col-md-12" id = "status") System prompt area
          div(class="row")
            div(class="col-md-4 matching")
              h1(id = "match_number")
            div(class="col-md-8 hand" id = "discard_pile")
          div(class="row")
            div(class="col-md-12" style="text-align:end" id ="card_controller")
              button(type = "button" class = "btn btn-outline-danger" id="uno") UNO
              button(type = "button" class = "btn btn-outline-danger" id="play" onclick="play_card()") PLAY
              div(class="cover" id="cover_button")
        #container_right(class="col-md-2 left_right")
        div(class="col-md-2")
          div(class="d-flex flex-column row-h1" id="right_user")
            div(class="p-2 item-h1")
              img(class="card-img-top" style="width: 10rem;" src="/images/profile/profile3.gif" alt="Card img top")
            div(class="p-2 item-h1 name" ) 
            div(class="p-2 item-h1 point") point
      div(class = "row")
        div(class="col-md-4 p-0")
          #messages(class = "col" style = "border:2px solid #dedede; height:120px; overflow-y:auto")
          div(class = "input-group mb-3")
            input#message(type = "text" class = "form-control")
            div(class = "input-group-append")
              button(type = "button" class = "btn btn-outline-danger") Send
        #container_bottom(class="col-md-8 top_bottom")
    //-  Modal
    div(class="modal fade" id= "modal" tabindex="-1" role="dialog" aria-labelledby="model_title" aria-hidden="true")
      div(class="modal-dialog modal-dialog-centered" role="document")
        div(class="modal-content")
          div(class="modal-header")
            h5(class="modal-title" id="model_title") Choose a color
          div(class="modal-body")
              button(class="btn btn-lg btn-success color_select" id="green" onclick="color_selector(this)" type="button")
              button(class="btn btn-lg btn-danger color_select" id="red" onclick="color_selector(this)"  type="button")
              button(class="btn btn-lg btn-warning color_select" id="yellow" onclick="color_selector(this)" type="button")
              button(class="btn btn-lg btn-primary color_select" id="blue" onclick="color_selector(this)" type="button")
    script(src="/socket.io/socket.io.js")
    script(type="text/javascript" src="/js/game/card.js" )
    script(type="text/javascript" src="/js/game/game-function.js" )
    script(type="text/javascript" src="/js/game/game-init.js")
    script(type="text/javascript" src="/js/game/game-action.js" )
