<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    title Uno!
    link(
     href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
     rel="stylesheet" 
     integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
     crossorigin="anonymous"
    )
    link(rel="stylesheet", href="/css/card.css")

  body
    header(class = "header") 
      img(
        src="/images/logo.png"
        class="rounded mx-auto img-fluid d-block"
        alt="Responsive image"
        width="70"
        height="100"
        )
  div(class="container fluid")
    div(class="row")
      div(class="col-md-2") Space1
      div(class="col-md-2") Draw
        button(type = "button" class = "btn btn-outline-danger") Draw
      #container_top(class="col-md-4 top_bottom ")
        
      div(class="col-md-2") Top_player Avatar
      div(class="col-md-2") 
        botton#leave(class="btn btn-outline-danger") Leave
    div(class ="row")
      div(class="col-md-2") left_player Avatar
      div(class="col-md-2 left_right")
        #container_left(class = "row")    
      div(class="col-md-4" )
        div(class = "row")
          div(class = "col-md-12" id = "status")
        div(class="row")
          div(class="col-md-4 matching")
            h1(id = "match_number")
          div(class="col-md-8 hand" id = "discard_pile")
        div(class="row")
          div(class="col-md-12" style="text-align:end" id ="card_controller")
            button(type = "button" class = "btn btn-outline-danger" id="uno") UNO
            button(type = "button" class = "btn btn-outline-danger" id="play") PLAY
            div(class="cover" id="cover_button")
      #container_right(class="col-md-2 left_right")
      div(class="col-md-2") right_player Avatar 
    div(class = "row")
      div(class="col-md-4 p-0")
        #messages(class = "col" style = "border:2px solid #dedede; height:120px; overflow-y:auto")
        div(class = "input-group mb-3")
          input#message(type = "text" class = "form-control")
          div(class = "input-group-append")
            button(type = "button" class = "btn btn-outline-danger") Send
      #container_bottom(class="col-md-8 top_bottom")
    script(type="text/javascript" src="/js/game/card.js" )
    script(type="text/javascript" src="/js/game/game-function.js" )
    script(type="text/javascript" src="/js/game/game-data.js" )
